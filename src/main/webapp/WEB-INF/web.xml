<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.revature.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.revature.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestForm</servlet-name>
        <servlet-class>com.revature.servlet.RequestFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllRequestForm</servlet-name>
        <servlet-class>com.revature.servlet.ViewAllRequestForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewRequestForm</servlet-name>
        <servlet-class>com.revature.servlet.ViewRequestFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateRequestForm</servlet-name>
        <servlet-class>com.revature.servlet.UpdateRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAllRequestform</servlet-name>
        <servlet-class>com.revature.servlet.UpdateAllRequestformServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>RequestForm</servlet-name>
    <url-pattern>/requestform</url-pattern>
</servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateRequestForm</servlet-name>
        <url-pattern>/updaterequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAllRequestform</servlet-name>
        <url-pattern>/updateallrequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewRequestForm</servlet-name>
        <url-pattern>/viewrequestform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllRequestForm</servlet-name>
        <url-pattern>/allrequestform</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>